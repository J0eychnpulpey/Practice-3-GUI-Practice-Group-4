<?import javafx.scene.layout.GridPane?>


 <GridPane fx:controller="com.mycompany.mavenproject1.PrimaryController"
          xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" alignment="CENTER" hgap="10" vgap="10">

    <Label text="Milestone Calculator MMDC" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-alignment: center;"/>
    
    <Label text="Milestone 1 (max 25 points):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="milestone1Field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    
    <Label text="Milestone 2 (max 40 points):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="milestone2Field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    
    <Label text="Terminal Assessment (max 35 points):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="terminalField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    
    <Button text="Calculate Grade" onAction="#calculateGrade" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button text="About" onAction="#showAbout" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    
    <Label fx:id="resultLabel" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
</GridPane>

